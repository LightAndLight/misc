cabal-version:      3.0
name:               x20250928-cell-crdt
version:            0.1.0.0
license:            MIT
license-file:       LICENSE
author:             Isaac Elliott
maintainer:         isaace71295@gmail.com
category:           Data
build-type:         Simple
extra-doc-files:    CHANGELOG.md

common warnings
    ghc-options: -Wall

library
    import:           warnings
    build-depends:
        attoparsec,
        barbies,
        base ^>=4.19.2.0,
        binary,
        bytestring,
        containers,
        cryptohash-md5,
        directory,
        entropy,
        generics-eot,
        hashable,
        mtl,
        text >=2.0,
        time,
        uuid
    exposed-modules:
        Base32
        BinaryCodec
        GID
        Getter
        Lib
        MD5
        StateId
        Todo
        Todo.Comment
        Todo.Task
        Todo.V0
    hs-source-dirs:   src
    default-language: Haskell2010

executable tsk
    import:           warnings
    hs-source-dirs:   app
    main-is:          Main.hs
    other-modules:    Todoist
    build-depends:
        attoparsec,
        x20250928-cell-crdt,
        barbies,
        base ^>=4.19.2.0,
        bytestring,
        cassava,
        containers,
        directory,
        text,
        time,
        optparse-applicative,
        process
    default-language: Haskell2010
    ghc-options:      -threaded

test-suite x20250928-cell-crdt-tests
    import:           warnings
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        x20250928-cell-crdt,
        base ^>=4.19.2.0,
        containers,
        hashable,
        hedgehog,
        hspec,
        hspec-hedgehog,
        uuid
    default-language: Haskell2010
